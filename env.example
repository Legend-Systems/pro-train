# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/exxam_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Gmail SMTP Configuration
# For Gmail, use one of these configurations:

# Option 1: Port 587 with STARTTLS (Recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Option 2: Port 465 with SSL/TLS
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Email Settings
EMAIL_FROM_ADDRESS=your-email@gmail.com
EMAIL_FROM_NAME="Exxam Platform"

# SMTP Pool Settings (Optional)
SMTP_POOL=true
SMTP_MAX_CONNECTIONS=5
SMTP_MAX_MESSAGES=100
SMTP_RATE_DELTA=1000
SMTP_RATE_LIMIT=14

# Debug Settings (Optional)
SMTP_DEBUG=false

# Email Queue Settings (Optional)
EMAIL_QUEUE_ENABLED=true
EMAIL_QUEUE_CONCURRENCY=5
EMAIL_QUEUE_RATE_LIMIT=10

# Gmail App Password Setup:
# 1. Enable 2-Factor Authentication on your Gmail account
# 2. Go to Google Account settings > Security > 2-Step Verification
# 3. Generate an "App Password" for this application
# 4. Use the generated 16-character app password as SMTP_PASSWORD
# 5. Do NOT use your regular Gmail password

# Security Notes:
# - Never commit this file with real credentials
# - Use environment-specific .env files
# - For production, use secure secret management
# - Consider using OAuth2 for enhanced security 